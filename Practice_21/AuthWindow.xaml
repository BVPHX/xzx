<Window x:Class="Practice_21.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice_21"
        mc:Ignorable="d"
        Title="AuthWindow" Height="193.033" Width="250.41">
    <Grid>
        <StackPanel>
            <Label Content="Логин"></Label>
            <TextBox x:Name="tbLogin"></TextBox>
            <Label Content="Пароль"></Label>
            <PasswordBox x:Name="PassBox" PasswordChar="*"></PasswordBox>
            <Button Content="Войти" IsDefault="True" Click="Auth_Click"></Button>
            <Button Content="Регистрация" Click="register_Click"></Button>
            <Button Content="Выход" Click="Exit_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
